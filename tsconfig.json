{
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "pretty": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": [
    "src",
    "types",
    "scripts"
  ]
}
