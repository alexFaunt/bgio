{
  "name": "bgio",
  "version": "0.0.5",
  "description": "TODO",
  "main": "TODO",
  "repository": "git@github.com:alexFaunt/bgio.git",
  "engines": {
    "yarn": "1.x",
    "node": "12"
  },
  "scripts": {
    "start": "yarn migrate && node ./build/server/server",
    "start:dev": "concurrently \"yarn start:client:dev\" \"docker-compose up\" \"WATCH=true yarn generate:types\"",
    "start:client:dev": "webpack-dev-server",
    "start:server:dev": "babel-watch --extensions '.js,.json,.ts,.gql' --watch=src/server/graphql/mutations --watch=src/server/graphql/types ./src/server/index.ts",
    "start:build:debug": "PORT=2001 DATABASE_URL=postgresql://admin-user:admin-pass@localhost:2002/bgio node ./build/server/server",
    "heroku-postbuild": "yarn build",
    "build": "yarn clean:build && yarn build:client && yarn build:server",
    "build:client": "webpack",
    "build:server": "babel src -d build/server --ignore src/client/ --ignore *.test.ts --extensions '.js,.json,.ts' --source-maps --verbose",
    "clean:build:server": "rm -rf build/server",
    "clean:build": "rm -rf build && mkdir build",
    "qa": "yarn tsc && yarn lint && yarn test",
    "lint": "eslint src",
    "tsc": "yarn generate:types && yarn tsc:client && yarn tsc:server",
    "tsc:client": "tsc --noImplicitAny --project tsconfig.client.json",
    "tsc:server": "tsc --noImplicitAny --project tsconfig.server.json",
    "test": "jest",
    "migrate": "ts-node -r tsconfig-paths/register ./node_modules/.bin/knex --knexfile ./src/server/db/knexfile.ts migrate:latest;",
    "rollback": "ts-node -r tsconfig-paths/register ./node_modules/.bin/knex --knexfile ./src/server/db/knexfile.ts migrate:rollback;",
    "migrate:dev": "ts-node -r tsconfig-paths/register ./node_modules/.bin/knex --knexfile ./src/server/db/knexfile.ts migrate:latest;",
    "rollback:dev": "ts-node -r tsconfig-paths/register ./node_modules/.bin/knex --knexfile ./src/server/db/knexfile.ts migrate:rollback;",
    "generate:migration": "hygen migration create",
    "generate:types": "babel-node --extensions '.js,.json,.ts' ./scripts/generate-types.ts"
  },
  "author": "alexfaunt",
  "license": "ISC",
